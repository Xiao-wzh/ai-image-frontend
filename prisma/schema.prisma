generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth 所需的标准模型
model User {
  id              String    @id @default(cuid())
  name            String?
  username        String?   @unique                  /// 用户名（唯一）
  email           String    @unique
  normalizedEmail String?   @unique                  /// 归一化邮箱（防别名重复注册）
  emailVerified DateTime?
  password      String?                            /// 加密后的密码
  image         String?                            /// 头像 URL
  credits       Int       @default(0)              /// 付费/常规积分（用户购买获得）
  bonusCredits  Int       @default(1000)           /// 赠送积分（默认赠送 1000=可生成5次）
  role          String    @default("USER")         /// 角色：USER / ADMIN
  lastCheckIn   DateTime?                          /// 每日打卡时间
  
  // 推广邀请系统
  referralCode  String?   @unique                  /// 用户专属推广码
  invitedById   String?                            /// 邀请人ID
  invitedBy     User?     @relation("UserInvites", fields: [invitedById], references: [id])
  invites       User[]    @relation("UserInvites") /// 此用户邀请的所有用户
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts        Account[]
  sessions        Session[]
  generations     Generation[]
  creditRecords   CreditRecord[]
  redemptionCodes RedemptionCode[] @relation("UserRedemptionCodes")
  appeals         Appeal[]
  
  // 推广佣金记录
  referralRewardsGiven    ReferralRecord[] @relation("InviterRewards") /// 作为邀请人获得的佣金
  referralRewardsGenerated ReferralRecord[] @relation("InviteeRewards") /// 作为被邀请人产生的佣金

  productTypePrompts ProductTypePrompt[]
}

// 推广佣金记录
model ReferralRecord {
  id          String   @id @default(cuid())
  inviterId   String                              /// 邀请人ID（获得佣金的人）
  inviteeId   String                              /// 被邀请人ID（充值的人）
  amount      Int                                 /// 佣金金额（例如充值金额的10%）
  sourceType  String                              /// 来源类型：CDK / ALIPAY / WECHAT
  sourceId    String?                             /// 关联的订单ID或CDK码
  createdAt   DateTime @default(now())

  inviter     User     @relation("InviterRewards", fields: [inviterId], references: [id])
  invitee     User     @relation("InviteeRewards", fields: [inviteeId], references: [id])

  @@index([inviterId])
  @@index([inviteeId])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

/// 邮箱验证码表（用于注册/登录验证）
model VerificationCode {
  id        String   @id @default(uuid()) @db.Uuid
  email     String                                   /// 邮箱地址
  code      String                                   /// 6位验证码
  expires   DateTime                                 /// 过期时间
  createdAt DateTime @default(now())

  @@unique([email, code])
  @@index([email])
  @@index([expires])
}

/// 积分流水记录（用户可见的总变动：正数=入账，负数=消耗）
model CreditRecord {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String
  amount      Int
  type        String
  description String
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

/// 卡密/兑换码
model RedemptionCode {
  id        String   @id @default(uuid()) @db.Uuid
  code      String   @unique
  credits   Int
  bonus     Int
  status    String   @default("UNUSED")
  usedBy    String?
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user User? @relation("UserRedemptionCodes", fields: [usedBy], references: [id], onDelete: SetNull)

  @@index([code])
  @@index([status])
  @@index([usedBy])
}

/// 平台（数据库驱动）
model Platform {
  id        String   @id @default(uuid()) @db.Uuid
  key       String   @unique
  label     String
  isActive  Boolean  @default(true)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  prompts ProductTypePrompt[]

  @@index([isActive, sortOrder])
}

// 我们的业务模型
model Generation {
  id              String   @id @default(uuid()) @db.Uuid
  userId          String?
  productName     String
  productType     String
  originalImage   String[]
  generatedImage  String?  @db.Text /// 存储完整的、未裁剪的原图 URL
  generatedImages String[] /// 存储九宫格切片图片 URL 数组
  status                   String   @default("PENDING")
  hasUsedDiscountedRetry Boolean @default(false)
  createdAt                DateTime @default(now())

  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  appeal Appeal? /// One-to-One: A generation can only be appealed once
}

/// 商品类型与提示词模板映射表
model ProductTypePrompt {
  id             String   @id @default(uuid()) @db.Uuid

  // 关联平台（数据库驱动）
  platformId     String   @db.Uuid
  platform       Platform @relation(fields: [platformId], references: [id], onDelete: Cascade)

  // 权限维度：UserId (空=所有人可用/系统默认，有值=该用户私有)
  userId         String?
  user           User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 业务维度：具体类别 Key (MENSWEAR, BEDDING)
  productType    String

  // 内容
  promptTemplate String   @db.Text
  description    String?

  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([platformId, productType])
  @@index([userId])
}

/// 申诉记录（用户对生成结果不满意可发起申诉）
model Appeal {
  id           String   @id @default(uuid()) @db.Uuid
  userId       String
  generationId String   @unique @db.Uuid /// One-to-One: each generation can only have one appeal
  reason       String?  @db.Text         /// 用户申诉原因说明（可选）
  status       String   @default("PENDING") /// PENDING / APPROVED / REJECTED
  refundAmount Int                        /// 退款积分数（创建时快照）
  adminNote    String?  @db.Text         /// 管理员备注（拒绝原因等）
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  generation Generation @relation(fields: [generationId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}
