generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth 所需的标准模型
model User {
  id            String    @id @default(cuid())
  name          String?
  username      String?   @unique                  /// 用户名（唯一）
  email         String    @unique
  emailVerified DateTime?
  password      String?                            /// 加密后的密码
  image         String?                            /// 头像 URL
  credits       Int       @default(500)            /// 积分余额（1元=100积分，默认500送2次）
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  generations   Generation[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

/// 邮箱验证码表（用于注册/登录验证）
model VerificationCode {
  id      String   @id @default(uuid()) @db.Uuid
  email   String                                   /// 邮箱地址
  code    String                                   /// 6位验证码
  expires DateTime                                 /// 过期时间
  createdAt DateTime @default(now())

  @@unique([email, code])
  @@index([email])
  @@index([expires])
}

// 我们的业务模型
model Generation {
  id             String   @id @default(uuid()) @db.Uuid
  userId         String?                              /// NextAuth 用户 ID（可选，支持匿名生成）
  productName    String
  productType    String
  originalImage  String   @db.Text
  generatedImage String?  @db.Text
  status         String   @default("PENDING")
  createdAt      DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

/// 商品类型与提示词模板映射表
model ProductTypePrompt {
  id             String   @id @default(uuid()) @db.Uuid
  productType    String   @unique                     /// 商品类型（如：男装、通用...）
  promptTemplate String   @db.Text                    /// 对应 Midjourney / SDXL 提示词模板
  description    String?                              /// 文字描述（可选）
  isActive       Boolean  @default(true)              /// 是否启用
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
