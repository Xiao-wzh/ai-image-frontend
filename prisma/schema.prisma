generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Generation {
  id             String   @id @default(uuid()) @db.Uuid
  productName    String
  productType    String
  originalImage  String   @db.Text
  generatedImage String?  @db.Text
  status         String   @default("PENDING")
  createdAt      DateTime @default(now())
}

/// 商品类型与提示词模板映射表
model ProductTypePrompt {
  id             String   @id @default(uuid()) @db.Uuid
  productType    String   @unique                     /// 商品类型（如：男装、通用...）
  promptTemplate    String?                              /// 提示词模板
  isActive       Boolean  @default(true)              /// 是否启用
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
